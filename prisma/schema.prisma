datasource db {
  url      = env("DATABASE_URL")
  provider = "mongodb"
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

model User {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  uuid        String @unique
  infractions Json[]
}

model Guild {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  guildId     String @unique
  modules     Json @default("{ \"modLogs\": false }")
}